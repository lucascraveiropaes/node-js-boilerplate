{
  "name": "@discovery-solutions/node-js-boilerplate",
  "productName": "NodeJS Boilerplate",
  "version": "1.0.0",
  "description": "NodeJS Boilerplate",
  "author": "Lucas Craveiro Paes",
  "license": "ISC",
  "main": "server/esm.js",
  "scripts": {
    "electron": "wait-on tcp:3000 && nodemon ./node_modules/electron/cli.js .",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "Discovery Solutions",
    "Discovery",
    "Solutions",
    "Electron",
    "NodeJS",
    "Boilerplate"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.17.10",
    "concurrently": "^5.2.0",
    "electron": "^19.0.0",
    "electron-is-dev": "^2.0.0",
    "esm": "^3.2.25",
    "nodemon": "^2.0.16",
    "wait-on": "^5.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^5.3.5"
  }
}
